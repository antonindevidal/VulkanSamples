#version 450


struct GrassBlade
{
    vec4 position;
};

layout(std140, binding = 0, set = 0) buffer GrassBladeSSBOIn {
    vec4 data;
    vec4 grassBlade[ ];
};


layout (local_size_x = 256, local_size_y = 1, local_size_z = 1) in;
void main() 
{
    uint index = gl_GlobalInvocationID.x;  

    grassBlade[index] = vec4(index + data.x, data.y, 0.0f, 1.0f);
}